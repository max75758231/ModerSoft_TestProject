<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHeaderGrey"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingTop="@dimen/nav_spacing_50dp"
    android:paddingLeft="@dimen/nav_spacing_16dp"
    android:paddingRight="@dimen/nav_spacing_16dp"
    android:paddingBottom="@dimen/nav_spacing_16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_title"
        android:textSize="@dimen/nav_header_20sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:paddingRight="@dimen/nav_spacing_4dp"
        android:paddingEnd="@dimen/nav_spacing_4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_gravity="start"
        android:text="@string/nav_header_online" />

</LinearLayout>
